<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
  <div class="container text-center mt-3">
    <form class="input-group g-2">
      <!-- <span class="col"> -->
        <input style="width: 100px;" class="form-control" id="search-csv" type="search" placeholder="search(2nd column)..." />
      <!-- </span> -->
      <!-- <span class="col"> -->
        <button class="btn btn-primary" id="search-complete">Search</button>
      <!-- </span> -->
      
    </form>
  </div>

  <div class="container mt-3" id="searh-data">
    <table class="table">
      <thead>
        <tr>
          <% for(let col of data.slice(0,1)) {%>
            <% for(let j of col){%>
              <th scope="col">
                <%=j %>
              </th>
              <%}%>
                <%}%>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% for(let i of data.slice(1)){%>
          <tr>
            <% for(let j of i){%>
              <td>
                <%=j%>
              </td>
              <%}%>
          </tr>
          <%}%>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  <script>
    let searchData = document.getElementById('searh-data');
    let searchCsv = document.getElementById('search-csv');
    let serchSubEle = document.getElementById('search-complete');
    const CSVFileData =<%- JSON.stringify(data) %>


    function search(event) {
      let value = event.target.value;
      // console.log(value)
      // event.preventDefault()
      let tableData ="";
      event.stopPropagation();
      if (value != "") {
        // document.getElementById('searh-data').innerHTML = ""
       tableData +=
        `<table class="table">
         <thead>
         <tr>`;
        for (let col of CSVFileData.slice(0, 1)) {
          for (let j of col) {
            tableData += `<th scope="col">${j}</th>`
          }
        }
        tableData += `</tr>
          </thead>
          <tbody class="table-group-divider">`
        for (let i of CSVFileData.slice(1)) {
          tableData += `<tr>`
          let searchName = i[1].toLowerCase();
          if (searchName.includes(value.toLowerCase())) {
            for (let j of i) {
              tableData += `<td>${j}</td>`
            }
          }
        }
        tableData += `</tbody>
        </table>`
        
        document.getElementById('searh-data').innerHTML = tableData
      }
      else{
        tableData +=
        `<table class="table">
         <thead>
         <tr>`
        for (let col of CSVFileData.slice(0, 1)) {
          for (let j of col) {
            tableData += `<th scope="col">${j}</th>`
          }
        }
        tableData += `</tr>
          </thead>
          <tbody class="table-group-divider">`
        for (let i of CSVFileData.slice(1)) {
          tableData += `<tr>`
            for (let j of i) {
              tableData += `<td>${j}</td>`
            }
        }
        tableData += `</tbody>
        </table>`
        
        document.getElementById('searh-data').innerHTML = tableData
      }

    }

    searchCsv.addEventListener('keyup', search);
    serchSubEle.addEventListener('click', (e) => {
      e.preventDefault();
      // searchCsv.value = "";
    })

  </script>

</body>

</html>